page {
  box-sizing: border-box;
  padding-left: 30rpx;
}
.topic-item {
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}
.topic-item .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.topic-item .content {
  color: #888;
  line-height: 50rpx;
  text-align: justify;
}
.publish-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #888;
}
