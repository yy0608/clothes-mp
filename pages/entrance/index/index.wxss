page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;

}
.sign-title {
  display: flex;
  justify-content: center;
}
.title-item {
  padding: 20rpx 30rpx;
}
.title-item.cur {
  border-bottom: 2rpx solid blue;
  color: blue;
}
.sign-cont-item {
  padding: 30rpx;
}
.cont-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.cont-item text {
  width: 140rpx;
  flex-shrink: 0;
}
.cont-item input {
  flex-grow: 1;
  padding: 15rpx 20rpx;
  border-radius: 6rpx;
}
.cont-item button {
  width: 100%;
}
.cont-item .send-code {
  width: 140rpx;
  flex-shrink: 0;
  margin-left: 30rpx;
}
