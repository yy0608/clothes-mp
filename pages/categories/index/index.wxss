page {
  display: flex;
}
.blank-cont {
  position: absolute;
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
  border-right: 1rpx solid #e0e0e0;
  background-color: #f5f5f5;
  z-index: -1;
}
scroll-view {
  position: relative;
  flex-shrink: 0;
  height: 100vh;
  width: 200rpx;
}
.left-category {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-top: -1rpx;
  transition: margin-left ease .2s;
}
.left-category.cur {
  margin-left: 1rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}
.right-categories {
  flex-grow: 1;
}
.right-categories {
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.right-category-item {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
.child-category-cont {
  display: flex;
  margin-left: -10rpx;
  margin-top: 20rpx;
}
.right-category .label {
  color: #666;
}
.child-category-item {
  margin-left: 10rpx;
}
.child-category-item .title {
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
}
.child-category-item image {
  width: 110rpx;
  height: 110rpx;
}