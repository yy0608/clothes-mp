page {
  font-size: 28rpx;
  color: #333;
}
.tc {
  text-align: center;
}
input, textarea {
  border: 1rpx solid #e0e0e0;
}
button {
  font-size: 28rpx;
}
image {
  display: block;
}
.toast-container {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 90;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 30rpx;
  white-space: nowrap;
  box-sizing: border-box;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #fff;
  opacity: 1;
  background-color: rgba(0, 0, 0, .5);
  /* transition: top .8s ease, opacity 1s ease; */
  transition: all ease .3s;
  pointer-events: none;
}
.toast-container.hide {
  top: -100%;
  opacity: 0;
}
.toast-container.default {
  background-color: #4c4c4c;
}
.toast-container.success {
  background-color: #09bb07;
}
.toast-container.info {
  background-color: #ffbe00;
}
.toast-container.tip {
  background-color: #10aeff;
}
.toast-container.error {
  background-color: #f76260;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
